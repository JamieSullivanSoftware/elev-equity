<style lang='scss'>
  @import '../../styles/variables.scss';

  .test {
    height: 22rem;
    overflow: hidden;
    display: flex;
    justify-content: center;
    align-items: center;
    overflow: hidden;
    background-color: $dark;
  }

  img {
    min-width: 100%;
    min-height: 100%;
    object-fit: cover;
  }

  picture {
    min-width: 100%;
    min-height: 100%;
  }

