---
import Button from '../common/Button.astro';
---

<div class='background-container'>
  <picture>
    <source
      media='(min-width: 930px)'
      srcset='/src/images/hero-desktop.webp'
    />
    <source
      media='(min-width: 564px)'
      srcset='/src/images/hero-tablet.webp'
    />
    <source
      media='(max-width: 564px)'
      srcset='/src/images/hero-mobile.webp'
    />
    <img
      src='/src/images/hero.webp'
      alt=''
    />
  </picture>

  <div class='container wrapper'>
    <h1 class='lf-semibold'>Business Consulting & Advisory Services</h1>
    <div class='btn-container'>
      <Button
        className='cta'
        text='Free Consultation'
      />
    </div>
  </div>
</div>

<style lang='scss'>
  @import '../../styles/variables.scss';

  .background-container {
    height: 22rem;
    overflow: hidden;
    display: flex;
    justify-content: center;
    align-items: center;
    overflow: hidden;
    background-color: $dark;
  }

  img {
    min-width: 100%;
    min-height: 100%;
    object-fit: cover;
  }

  picture {
    min-width: 100%;
    min-height: 100%;
  }

  .container {
    display: flex;
    position: absolute;
    flex-direction: column;
    align-items: center;
    text-align: center;
    color: $white;
    max-width: 26.25rem;

    h1 {
      margin-bottom: 1.5rem;
    }
  }

  .btn-container {
    width: 100%;
    max-width: $max-btn-width;
  }

  // Above mobile
  @media only screen and (min-width: $mobile) {
    .container {
      h1 {
        margin-bottom: 2rem;
      }
    }

    .background-container {
      height: 33.75rem;
    }

    .btn-container {
      width: max-content;
    }
  }

  // Above tablet
  @media only screen and (min-width: $tablet) {
    .container {
      h1 {
        margin-bottom: 3rem;
      }
    }

    .background-container {
      height: 38rem;
    }
  }
</style>
