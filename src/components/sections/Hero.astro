  .container {
    display: flex;
    position: absolute;
    flex-direction: column;
    align-items: center;
    text-align: center;
    color: $white;
    max-width: 26.25rem;

    h1 {
      margin-bottom: 1.5rem;
    }
  }

  .btn-container {
    width: 100%;
    max-width: $max-btn-width;
  }

  // Above mobile
  @media only screen and (min-width: $mobile) {
    .container {
      h1 {
        margin-bottom: 2rem;
      }
    }

    .test {
      height: 33.75rem;
    }

    .btn-container {
      width: max-content;
    }
  }

  // Above tablet
  @media only screen and (min-width: $tablet) {
    .container {
      h1 {
        margin-bottom: 3rem;
      }
    }

    .test {
      height: 38rem;
    }
  }
