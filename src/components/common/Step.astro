---
interface Props {
  num: string;
  heading: string;
  content: string;
}

const { num, heading, content } = Astro.props;
---

<div class='container'>
  <div class='num'>
    {num}
  </div>
  <div class='content'>
    <h3 class='sans-medium'>{heading}</h3>
    <p class='sans-regular'>
      {content}
    </p>
  </div>
</div>

<style lang='scss'>
  @import '../../styles/variables.scss';

  $border-radius: 0.5rem;

  .container {
    display: grid;
    grid-template-columns: min-content 1fr;
    max-width: 52rem;
    box-shadow: 0px 4px 20px 1px $neutral-dark;
    min-height: 13.75;
    border-radius: $border-radius;
  }

  .num {
    display: flex;
    align-items: center;
    justify-content: center;
    font-family: 'SourceSansMedium', sans-serif;
    font-size: 4rem;
    color: $white;
    background-color: $dark;
    padding: 1.25rem 2.5rem;
    border-top-left-radius: $border-radius;
    border-bottom-left-radius: $border-radius;
  }

  .content {
    display: flex;
    flex-direction: column;
    justify-content: center;
    background-color: $white;
    padding: 1.25rem 1.75rem;
    border-top-right-radius: $border-radius;
    border-bottom-right-radius: $border-radius;
  }
</style>
