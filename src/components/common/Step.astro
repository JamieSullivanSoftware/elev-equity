---
interface Props {
  num: string;
  heading: string;
  text: string;
}

const { num, heading, text } = Astro.props;
---

<div class='container'>
  <div class='content'>
    <div class='num'>
      {num}
    </div>
    <div class='text'>
      <h3 class='sans-medium'>{heading}</h3>
      <p class='sans-regular'>
        {text}
      </p>
    </div>
  </div>
  <div class='mobile-content'>
    <h3 class='sans-medium'>{num}. {heading}</h3>
    <p class='sans-regular'>
      {text}
    </p>
  </div>
</div>

<style lang='scss'>
  @import '../../styles/variables.scss';

  $border-radius: 0.5rem;

  .content {
    display: none;
  }

  .mobile-content {
    display: block;
    box-shadow: 0px 4px 20px 1px $neutral-dark;
    min-height: 13.75;
    border-radius: $border-radius;
    padding: 1rem 1.5rem;
    background-color: $white;

    h3 {
      margin-bottom: 0.25rem;
    }
  }

  // Above mobile
  @media only screen and (min-width: $mobile) {
    .mobile-content {
      display: none;
    }

    .content {
      display: grid;
      grid-template-columns: min-content 1fr;
      max-width: 52rem;
      box-shadow: 0px 4px 20px 1px $neutral-dark;
      min-height: 12rem;
      border-radius: $border-radius;

      .num {
        display: flex;
        align-items: center;
        justify-content: center;
        font-family: 'SourceSansMedium', sans-serif;
        font-size: 4rem;
        color: $white;
        background-color: $dark;
        padding: 1.25rem 2.5rem;
        border-top-left-radius: $border-radius;
        border-bottom-left-radius: $border-radius;
      }

      .text {
        display: flex;
        flex-direction: column;
        justify-content: center;
        background-color: $white;
        padding: 1.25rem 1.75rem;
        border-top-right-radius: $border-radius;
        border-bottom-right-radius: $border-radius;
      }
    }
  }

  @media only screen and (min-width: $tablet) {
    .content {
      min-height: 10.25rem;
    }
  }

  @media only screen and (min-width: $desktop) {
    .content {
      min-height: 13.75rem;
    }
  }
</style>
